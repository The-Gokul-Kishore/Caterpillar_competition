    <collision>
      <geometry><box size="0.3 0.03 0.3"/></geometry>
      <origin rpy="0 0 1.5708" xyz="0 0 0.15"/>
    </collision>

  </link>
  
  <joint name="fix_to_world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
