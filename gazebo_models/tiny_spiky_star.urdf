<?xml version="1.0"?>
<robot name="cross_star">
  <link name="world"/>

  <link name="base_link">
    <inertial>
      <mass value="2.0"/> 
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <visual>
      <geometry><box size="0.3 0.03 0.3"/></geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
      <origin rpy="0 0 0" xyz="0 0 0.15"/>
    </visual>
    <collision>
      <geometry><box size="0.3 0.03 0.3"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 0.15"/>
    </collision>

    <visual>
      <geometry><box size="0.3 0.03 0.3"/></geometry>
      <material name="red"/>
      <origin rpy="0 0 1.5708" xyz="0 0 0.15"/>
